{
  "environments": {
    "torchpy310": {
      "description": "PyTorch environment with Python 3.10",
      "python": "3.10",
      "packages": {
        "conda": [
          "pytorch",
          "torchvision",
          "torchaudio",
          "pytorch-cuda=11.8",
          "numpy",
          "pandas",
          "matplotlib",
          "jupyter",
          "ipykernel"
        ],
        "pip": [
          "transformers",
          "datasets",
          "accelerate",
          "wandb",
          "tensorboard",
          "scikit-learn",
          "seaborn",
          "tqdm",
          "pillow"
        ]
      },
      "channels": ["pytorch", "nvidia", "conda-forge"]
    },
    "torchpy311": {
      "description": "PyTorch environment with Python 3.11",
      "python": "3.11",
      "packages": {
        "conda": [
          "pytorch",
          "torchvision",
          "torchaudio",
          "pytorch-cuda=11.8",
          "numpy",
          "pandas",
          "matplotlib",
          "jupyter",
          "ipykernel"
        ],
        "pip": [
          "transformers",
          "datasets",
          "accelerate",
          "wandb",
          "tensorboard",
          "scikit-learn",
          "seaborn",
          "tqdm",
          "pillow"
        ]
      },
      "channels": ["pytorch", "nvidia", "conda-forge"]
    },
    "tensorflow": {
      "description": "TensorFlow environment with Python 3.10",
      "python": "3.10",
      "packages": {
        "conda": [
          "tensorflow",
          "numpy",
          "pandas",
          "matplotlib",
          "jupyter",
          "ipykernel"
        ],
        "pip": [
          "tensorflow-gpu",
          "keras",
          "wandb",
          "tensorboard",
          "scikit-learn",
          "seaborn",
          "tqdm",
          "pillow"
        ]
      },
      "channels": ["conda-forge"]
    },
    "minimal": {
      "description": "Minimal environment for basic ML tasks",
      "python": "3.10",
      "packages": {
        "conda": [
          "numpy",
          "pandas",
          "matplotlib",
          "jupyter",
          "ipykernel"
        ],
        "pip": [
          "scikit-learn",
          "seaborn",
          "tqdm"
        ]
      },
      "channels": ["conda-forge"]
    }
  },
  "default_environment": "torchpy310",
  "server_configs": {
    "duke_slurm": {
      "description": "Duke University SLURM cluster configuration",
      "gpu_partition": "compsci-gpu",
      "default_memory": "32G",
      "default_time": "4:00:00",
      "conda_path": "~/miniconda3/etc/profile.d/conda.sh"
    },
    "generic_linux": {
      "description": "Generic Linux server configuration",
      "conda_path": "~/miniconda3/etc/profile.d/conda.sh"
    }
  }
} 